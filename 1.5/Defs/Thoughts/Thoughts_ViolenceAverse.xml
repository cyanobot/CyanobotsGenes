    <validWhileDespawned>true</validWhileDespawned>
	<requiredGenes>
		<li>CYB_ViolenceAverse</li>
	</requiredGenes>
    <stages>
      <li>
        <label>weapon</label>
        <description>This is a tool of death.</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <!--Copies-->
  
